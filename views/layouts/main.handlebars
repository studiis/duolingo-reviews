<script>
    $('#search').on('input', function() {
        const input = $('#search').val();
        var arr = Array.from($("#cards")[0].children).filter(function(elem) {
            $(elem).toggle(elem.getElementsByClassName("card-title")[0].innerText.toLowerCase().indexOf(input.toLowerCase()) > -1);
            return elem.getElementsByClassName("card-title")[0].innerText.toLowerCase().indexOf(input.toLowerCase()) > -1;
        });
        if (arr.length === 0) {
            document.getElementById("no-matches").innerHTML='<p style="color: gray">no matches found</p>'
        } else if (arr.length > 0) {
            document.getElementById("no-matches").innerHTML='<p></p>'
        }

    });
